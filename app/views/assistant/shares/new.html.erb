<div class="popup-container black-on-gray" style="margin-top:25px;">
  <%= form_for [:assistant, @goal, @share] do |f| %>
    <%= f.hidden_field :user_id, :value => current_user.id %>
    <fieldset class="fieldset-border" style="padding:18px 45px 25px 45px;">
      <legend>
        <h2 class="sg-legend-margin">
          Share Your <%= t('activerecord.models.goal').titleize %> of <%= raw @goal.description %>
        </h2>
      </legend>
      <div class="row-fluid">
        <div class="span2">
          <%= image_tag @goal.goal_type_hash[:enabled_image_path], {:class => "share_btn_big image"} %>
        </div>

        <div class="span10">
          <div class="row-fluid">
            <div class="span3 bold-font">Comment</div>
            <div class="span9">
              <%= f.text_field :comment, :class => "span12", :placeholder => 'Add a comment..' %>
              <div> <%= custom_error_message_no_margin(@share, :comment) %></div>
            </div>

          </div>
          <br />

          <div class="row-fluid">
            <div class="span3 bold-font"><%= t 'activerecord.attributes.goal.show.started_date' %></div>
            <div class="span9"><%= l @goal.started_date.to_date %></div>
          </div>
          <br />

          <div class="row-fluid">
            <div class="span3 bold-font"><%= t 'activerecord.attributes.goal.show.end_date' %></div>
            <div class="span9"><%= l @goal.end_date.to_date %></div>
          </div>
          <br/>

          <div class="row-fluid">
            <div class="span3 bold-font"><%= t 'activerecord.attributes.goal.show.percentage' %></div>
            <div class="span9"><%= "#{@goal.status_percentage}%" %></div>
          </div>
          <br/>

          <div class="row-fluid">
            <div class="span3 bold-font">Tell A Friend</div>
            <div class="span9">
              <%= f.select :trackers, @friends.map { |user| [user.full_name, user.id] }, {:prompt => false}, {:multiple => true, :class => "span4"} %>
              <div class="row-fluid">
                <div class="span">
                  <%= custom_error_message_no_margin_no_field_name(@share, :trackers, 10) %>
                </div>
              </div>

            </div>
          </div>

          <div class="row-fluid">
            <div class="float_r category-btn-margin" style="">
              <a class="btn btn-info cancelbtn jQueryFancyboxIframeClose" href="#"><%= t('cancel')%></a>
            </div>

            <div class="float_r">
              <button class="btn btn-info savebtn"><%= t 'share.share'%></button>
            </div>
          </div>

        </div>

      </div>

    </fieldset>
  <% end %>
</div>


