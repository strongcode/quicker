
<div class="container sgPasswordErr">
  <%= devise_error_messages! %>
</div>
<%= content_for :snap_to_it do %>
<% end %>
<div class="container">

  <div class="row-fluid">
    <div class="span9 text_align_center">
      <div class="container sign_up_container signup_conatiner_margin" >
        <div class="span5 sign_up_content">
          <div class=" signup_with_text">Login with </div>
          <%- if devise_mapping.omniauthable? %>
            <%- resource_class.omniauth_providers.each do |provider| %>
              <%= link_to "", omniauth_authorize_path(resource_name, provider), :class => "signup_#{provider.to_s}" %>

            <% end -%>
          <% end -%>
        </div>

        <div class="span1 v_divider hidden-phone">
          <img src="/assets/or_v_divider.png" alt="or_v_divider image"/>
        </div>
        <div class="span6 signup_r_content">
          <div class=" signup_with_text" style="margin-left:0px;"> Login with </div>
          <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

            <div><% if flash[:alert] %>
                <div class="signin_error signin_error1">
                  <%= flash[:alert] %>
                </div>
              <% end %>
            </div>

            <div class="row-fluid">
              <div class="span3 sign_up_label">
                <label>Email </label>
              </div>
              <div class="span9">
                <%= f.email_field :email, :value => cookies[:email].presence, :class => "signup_input width-284" ,:size =>0 %>
                <p id="LoginEmailError" class="sg_acc_info_error error" style="margin-left:20px;" >&nbsp;</p>
              </div>
            </div>
            <br/>
            <div class="row-fluid">
              <div class="span3 sign_up_label">
                <label>Password</label>
              </div>
              <div class="span9">
                <%= f.password_field :password, :class => "signup_input width-284" %>
                <p id="LoginPasswordError" class="sg_acc_info_error error" style="margin-left:20px;" >&nbsp;</p>
              </div>
            </div>

            <br />
            <div class="row-fluid">
              <%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
              <div class="span3 black-on-gray" style="text-align:left;"><label for="resourceRemember">Remember Me</label></div>
                <div class="span9">
                  <%= check_box_tag 'user[sg_remember_me]', 1, cookies[:email].presence, :class => "", :id => 'resourceRemember', :style => 'vertical-align:middle;float:left; margin-left:38px;' %>
                </div>
              <% end -%>
            </div>

            <div class="signup_forget signup_input_align"> <%= link_to "Forgot your password?", new_password_path(resource_name), :remote => true, :class => 'black-on-gray-anchor' %></div>
            <div class="create_act_btn">
              <%= f.submit "Login", :id => "login", :class => "btn btn-info" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

