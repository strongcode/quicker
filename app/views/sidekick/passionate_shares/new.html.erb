<div class="popup-container black-on-gray" style="margin-top:15px;">
  <%= form_for [:sidekick, @passionate, @share], :url => sidekick_passionate_passionate_shares_path(@passionate, @share) do |f| %>
    <%= f.hidden_field :user_id, :value => current_user.id %>
    <fieldset class="fieldset-border" style="padding:18px 45px 25px 45px;">
      <legend>
        <h2 class="sg-legend-margin">
          <%= t 'share.passionate_share.share_your_passionate_of'%>&nbsp;<%= raw @passionate.name %>
        </h2>
      </legend>
      <div class="row-fluid">
        <div class="span2">
          <%= image_tag @passionate.photo.image_url(:standard_image), {:class => "share_btn_big image"} %>
        </div>

        <div class="span10">
          <div class="row-fluid">
            <div class="span3 bold-font">Comment</div>
            <div class="span9">
              <%= f.text_field :comment, :class => "span12", :placeholder => 'Add a comment..' %>
            </div>
          </div>
          <br />

          <div class="row-fluid">
            <div class="span3 bold-font"><%= t 'share.passionate_share.passionate_list_created'%></div>
            <div class="span9"><%= l @passionate.created_at.to_date %></div>
          </div>
          <br />

          <div class="row-fluid">
            <div class="span3 bold-font"><%= t 'share.passionate_share.passionate_location'%></div>
            <div class="span9"><%=  @passionate.location.try(&:name) %></div>
          </div>
          <br/>

          <div class="row-fluid">
            <div class="span3 bold-font">Tell A Friend</div>
            <div class="span9">
              <%= f.select :trackers, current_user.get_friends.map { |user| [user.full_name, user.id] }, {:prompt => false}, {:multiple => true, :class => "span4"} %>
            </div>
          </div>
        </div>

        <div class="row-fluid">
          <div class="float_r" style="width:150px; text-align: right;">
            <button class="btn btn-info save_cancel_btn jQueryFancyboxIframeClose" onclick="return false;"><%= t('cancel')%></button>
          </div>

          <div class="float_r" style="width:150px; text-align: right;">
            <button class="btn btn-info save_cancel_btn"><%= t 'share.share'%></button>
          </div>

        </div>

      </div>

    </fieldset>
  <% end %>
</div>


