<div class="container">

  <h2>Sign up</h2><br />

  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="row-fluid">
      <div class="span3">
        <%= f.label :email %>
      </div>
      <div class="span5">
        <%= f.email_field :email, :autofocus => true, :class => 'signup_input' %>
      </div>
    </div>

    <div class="row-fluid">
      <div class="span3">
        <%= f.label :password %>
      </div>
      <div class="span5">
        <%= f.password_field :password, :class => 'signup_input' %>
      </div>
    </div>

    <div class="row-fluid">
      <div class="span3"><%= f.label :password_confirmation %></div>
      <div class="span5"><%= f.password_field :password_confirmation, :class => 'signup_input' %></div>
    </div>

    <div class="row-fluid">
      <%= f.submit "Sign up" %></div>
    <% end %>

  <%= render "devise/shared/links" %>
</div>