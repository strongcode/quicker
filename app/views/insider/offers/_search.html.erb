<div class="container insider_container_margin">
  <div class="row-fluid hidden-tablet" >
    <div class="insider_row">
      <div class="span8 offer-search">
        <div class="row-fluid">
          <div class="span4">
            <div class=" insider_offer_title ">Show Me More Deals
            </div>
          </div>
        </div>

        <%= form_tag('/insider_search') do %>
          <div class="row-fluid">
            <div class="span1">&nbsp;</div>
            <div class="span3">
              <div class="insider_dobetter_search"><%= t(:major_category) %>
              </div>
            </div>
            <div class="span6">
              <select class="insider_dobetter_select" name='search_offers[major_category]'>
                <%= options_for_select([["All Categories","all"]] + get_categories) %>
              </select>
            </div>
          </div>

          <div class="row-fluid" style="margin-top: 10px;">
            <div class="span2">
            </div>
            <div class="span2">
              <div class="insider_dobetter_search" style="margin-top:0px;"><%= t(:local) %></div>
            </div>
            <div class="span8">
              <input type="checkbox" name='search_offers[local]' value='true' />
            </div>
          </div>

          <div class="row-fluid">
            <div class="span4">&nbsp;</div>
            <div class="span5">
              <div class="insider_dobetter_search_btn">
                <button class="btn btn-info">
                  <i class="icon-search icon-white"></i><%= t(:search) %>
                </button>
              </div>
            </div>
            <div class="span3"></div>
          </div>
        <% end %>
      </div>
      <div class="span4"> </div>
    </div>
  </div>
</div>
